{
  "name": "neuroscan-ai",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "Advanced MRI Analysis Desktop Application",
  "author": "Your Name",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vite build && electron-builder",
    "build:dir": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vite build && electron-builder --dir",
    "preview": "vite preview",
    "package:win": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vite build && electron-builder --win",
    "package:mac": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vite build && electron-builder --mac",
    "package:linux": "cross-env NODE_OPTIONS=--max-old-space-size=4096 vite build && electron-builder --linux"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "daikon": "1.2.43",
    "electron-store": "^8.1.0",
    "html2canvas": "1.4.1",
    "jspdf": "2.5.1",
    "lucide-react": "^0.562.0",
    "nifti-reader-js": "0.6.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.neuroscan.ai",
    "productName": "NeuroScan AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "nii",
          "name": "NIfTI File",
          "description": "NIfTI Medical Image",
          "role": "Viewer"
        },
        {
          "ext": "dcm",
          "name": "DICOM File",
          "description": "DICOM Medical Image",
          "role": "Viewer"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.healthcare-fitness",
      "fileAssociations": [
        {
          "ext": "nii",
          "name": "NIfTI File",
          "description": "NIfTI Medical Image",
          "role": "Viewer"
        },
        {
          "ext": "dcm",
          "name": "DICOM File",
          "description": "DICOM Medical Image",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Science"
    }
  }
}